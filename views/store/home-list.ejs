<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-tr from-blue-100 via-white to-pink-100 text-gray-800 min-h-screen flex flex-col justify-between">
  <!-- üåê Navbar -->
  <%- include('../partials/nav') %>
 
  <!-- üí¨ Welcome Section for Guest -->
  <header class="text-center py-20 bg-gradient-to-r from-blue-200 via-blue-50 to-blue-200 shadow-inner">
    <h1 class="text-5xl font-extrabold text-blue-700 mb-4">
      Find Your Perfect Stay
    </h1>
    <p class="text-lg text-gray-700 max-w-xl mx-auto">
      Browse hundreds of homes and book your next stay with comfort and ease.
    </p>
  </header>

  <!-- üèòÔ∏è Home Listings Section -->
  <section class="max-w-7xl mx-auto px-4 py-14">
    <h2 class="text-3xl font-bold text-gray-800 mb-8 text-center">Home Listings</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% homeData.forEach((data) => { %>
        <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-shadow duration-300 overflow-hidden min-h-[460px] min-w-[381.5px] flex flex-col">
          <!-- üñºÔ∏è Image -->
          <img src="<%= data.image %>" alt="<%= data.name %>" class="w-full h-60 object-cover">

          <!-- üìã Content -->
          <div class="p-6 flex flex-col justify-between flex-grow">
            <div>
              <h3 class="text-xl font-semibold text-gray-900 truncate mb-1"><%= data.name %></h3>
              <p class="text-gray-600 text-sm mb-2"><%= data.location %></p>

              <div class="flex justify-between text-sm text-gray-700 mb-3">
                <p><span class="font-semibold text-red-500">Rs:</span> <%= data.price %>/day</p>
                <p><span class="font-semibold text-green-600">Rating:</span> <%= data.rating %></p>
              </div>
            </div>

            <div class="flex justify-between w-full items-center">
              <a href="/guest/home-details/<%= data._id %>" 
                 class="bg-blue-100 text-blue-600 text-sm px-4 py-2 rounded hover:bg-blue-200 transition">
                ‚úèÔ∏è Details
              </a>
              <%- include('../partials/favourite', { home: data }) %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- ü¶∂ Footer -->
  <footer class="bg-white text-center py-6 border-t text-sm text-gray-500">
    &copy; 2025 MyHome. All rights reserved.
  </footer>
</body>

</html>
