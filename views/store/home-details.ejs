<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-blue-100 via-white to-pink-100 min-h-screen text-gray-800 font-sans">
  <!-- üåê Navbar -->
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-16 mt-20">
    <section class="bg-white/60 backdrop-blur-xl shadow-xl rounded-3xl p-8 max-w-5xl mx-auto">
      <h2 class="text-4xl md:text-5xl font-extrabold text-center text-blue-800 mb-10 tracking-tight drop-shadow-sm">
        üè° <%= home.name %>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">
        <!-- üñºÔ∏è Home Image -->
        <div class="rounded-xl overflow-hidden shadow-md">
          <img src="<%= home.image %>" alt="<%= home.name %>" class="w-full h-64 object-cover" />
        </div>

        <!-- üè∑Ô∏è Home Details -->
        <div class="space-y-6 text-sm sm:text-base">
          <div>
            <h3 class="text-xl font-semibold text-gray-700"> Location</h3>
            <p class="text-gray-600 mt-1"><%= home.location %></p>
          </div>

          <div>
            <h3 class="text-xl font-semibold text-gray-700"> Price</h3>
            <p class="text-green-600 text-xl font-bold mt-1">Rs <%= home.price %> / night</p>
          </div>

          <div>
            <h3 class="text-xl font-semibold text-gray-700"> Rating</h3>
            <div class="flex items-center text-gray-600 mt-1">
              <span class="text-yellow-400 text-xl">‚òÖ</span>
              <span class="ml-2"><%= home.rating %> / 5</span>
            </div>
          </div>

          <!-- üìÑ Download -->
          <div>
            <a href="/guest/downloads/house-rules/<%= home._id %>.pdf"
              class="inline-block bg-indigo-600 text-white text-sm font-medium px-5 py-2.5 rounded-lg shadow hover:bg-indigo-700 transition">
              üìÑ Download House Rules
            </a>
          </div>

          <!-- ‚ù§Ô∏è Favourite + üõèÔ∏è Booking -->
          <div class="space-y-3">
            <%- include('../partials/favourite') %>

            <form action="/guest/home-booking/<%= home._id %>" method="POST">
              <button type="submit"
                class="w-full bg-green-600 text-white text-sm font-semibold px-5 py-2.5 rounded-lg shadow hover:bg-green-700 transition">
                üõèÔ∏è Book Now
              </button>
            </form>
          </div>
        </div>
      </div>
    </section>
  </main>
</body>
</html>
