<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-blue-100 via-white to-pink-100 min-h-screen text-gray-800">
  <%- include('../partials/nav') %>

  <main class="container mx-auto px-4 py-12 mt-16">
    <section class="bg-white/50 backdrop-blur-lg shadow-xl rounded-2xl p-8 max-w-6xl mx-auto">
      <h2 class="text-4xl font-bold text-center text-red-500 mb-10">
        Details of <%= home.name %>
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">
        <!-- Home Image -->
        <div class="rounded-xl overflow-hidden shadow-lg">
          <img src="<%= home.imageUrl %>" alt="<%= home.name %>" class="w-full h-96 object-cover" />
        </div>

        <!-- Home Info -->
        <div class="space-y-6 text-gray-700">

          <!-- Location -->
          <div class="border-b pb-4">
            <h3 class="text-2xl font-semibold mb-2">üìç Location</h3>
            <p class="text-lg"><%= home.location %></p>
          </div>

          <!-- Price -->
          <div class="border-b pb-4">
            <h3 class="text-2xl font-semibold mb-2">üí∞ Price</h3>
            <p class="text-green-600 text-xl font-bold">Rs <%= home.price %> / night</p>
          </div>

          <!-- Rating -->
          <div class="border-b pb-4">
            <h3 class="text-2xl font-semibold mb-2">‚≠ê Rating</h3>
            <div class="flex items-center">
              <span class="text-yellow-400 text-2xl">‚òÖ</span>
              <span class="ml-2 text-lg"><%= home.rating %> / 5</span>
            </div>
          </div>

          <!-- Favourite Button -->
          <div class="pt-2">
            <%- include('../partials/favourite') %>
          </div>

        </div>
      </div>
    </section>
  </main>
</body>
</html>
