<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-b from-blue-50 via-white to-blue-100 text-gray-800 min-h-screen flex flex-col">
  <!-- üåê Navbar -->
  <%- include('../partials/nav') %>

  <!-- üì¨ Contact Header -->
  <header class="py-20 text-center">
    <h1 class="text-5xl font-extrabold text-blue-700 mb-4">Get in Touch</h1>
    <p class="text-lg text-gray-600 max-w-xl mx-auto">
      We'd love to hear from you. Send us your thoughts, questions, or feedback using the form below.
    </p>
  </header>

  <!-- ‚úâÔ∏è Contact Form -->
  <main class="flex-grow px-4">
    <div class="max-w-4xl mx-auto bg-white p-10 rounded-3xl shadow-xl border border-gray-200">
      <form action="/contact/contact-us" method="POST" class="space-y-8">
        <%- include('../partials/error') %>
        <div class="grid md:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Your Name</label>
            <input type="text" id="name" name="name" required value="<%= oldInput.name ? oldInput.name : ''  %>"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none shadow-sm">
          </div>

          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
            <input type="email" id="email" name="email" required readonly
              value="<%= oldInput.email ? oldInput.email : email  %>"
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none shadow-sm">
          </div>
        </div>

        <div>
          <label for="subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
          <input type="text" id="subject" name="subject" required
            value="<%= oldInput.subject ? oldInput.subject : ''  %>"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none shadow-sm">
        </div>

        <div>
          <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
          <textarea id="message" name="message" rows="6" required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:outline-none shadow-sm resize-none"><%= oldInput.message ? oldInput.message : ''  %></textarea>
        </div>

        <div class="text-center pt-4">
          <button type="submit"
            class="bg-blue-600 text-white text-lg font-medium px-8 py-3 rounded-full shadow-lg hover:bg-blue-700 transition duration-300">
            ‚úâÔ∏è Send Message
          </button>
        </div>
      </form>
    </div>
  </main>

  <!-- ü¶∂ Footer -->
  <footer class="bg-white text-center py-6 border-t text-sm text-gray-500 mt-12">
    &copy; 2025 MyHome. All rights reserved.
  </footer>
</body>

</html>