<%- include('../partials/head')%>
</head>

<body class="bg-gray-50 text-gray-800">
  <!-- 🌐 Navbar -->
  <%- include('../partials/nav')%>
  <section class="max-w-6xl mx-auto px-4 py-12 mt-16">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Favourite lists</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Example card -->
      <% favouriteHome.forEach((home)=>{ %>
      <div class="bg-white rounded-xl shadow p-5">
        <h3 class="text-xl font-semibold text-gray-800">Modern Apartment</h3>
        <img src="<%= home.imageUrl %> " alt="" srcset="" class="w-full h-1/2">
        <div>
          <p class="text-gray-500">
            <%= home.name %>
          </p>
          <p class="text-gray-500">
            <%= home.location %>
          </p>
          <div class="flex justify-between items-center w-full  gap-4 text-gray-500 mt-2">
            <h4>
              <b class="text-red-500"> Rs:</b> <span class="text-gray-500">
                <%= home.price %>/day
              </span>
            </h4>
            <p>
              <span class="text-green-600 mt-0">Rating:</span><span class="text-gray-500 mt-0">
                <%= home.rating %>
              </span>
            </p>
          </div>
          <div class="mt-5  flex items-center justify-center w-full">
            <a href="/home-details/<%= home._id %> "
              class="text-black-400 mr-6 px-3 py-2 rounded hover:bg-blue-500 bg-blue-300">Details</a>
            <form action="/favourites-remove/<%= home._id %> " method="POST">
              <button type="submit" class="bg-red-300 rounded p-2 hover:bg-red-500">Remove to Favourite</button>
            </form>
          </div>

        </div>
      </div>
      <% }) %>
      <!-- Add more cards dynamically later -->
    </div>
  </section>
</body>

</html>