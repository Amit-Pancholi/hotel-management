<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-tr from-blue-100 via-white to-pink-100 text-gray-800 min-h-screen">
  <!-- üåê Navbar -->
  <%- include('../partials/nav') %>

  <section class="max-w-6xl mx-auto px-4 py-16 mt-20">
    <h2 class="text-3xl sm:text-4xl font-extrabold text-center text-blue-800 mb-10 drop-shadow-md">
      ‚≠ê Your Favourite Homes
    </h2>

    <% if (favouriteHome.length === 0) { %>
      <p class="text-center text-gray-500 text-lg">No favourite homes added yet.</p>
    <% } else { %>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      <% favouriteHome.forEach((home) => { %>
        <div
          class="bg-white/60 backdrop-blur-md border border-white/30 rounded-2xl shadow-lg overflow-hidden transform transition-all hover:scale-[1.015] duration-300 flex flex-col">
          
          <!-- üñºÔ∏è Image -->
          <img src="<%= home.image %>" alt="<%= home.name %>" class="w-full h-48 object-cover rounded-t-2xl" />

          <!-- üìã Content -->
          <div class="p-6 flex flex-col justify-between flex-grow space-y-3">
            <h3 class="text-xl font-bold text-blue-700 truncate"><%= home.name %></h3>
            <div class="text-sm text-gray-700 space-y-1">
              <p><span class="font-medium">üìç Location:</span> <%= home.location %></p>
              <p><span class="font-medium text-red-600">üí∞ Rs:</span> <%= home.price %>/day</p>
              <p><span class="font-medium text-green-600">‚≠ê Rating:</span> <%= home.rating %></p>
            </div>

            <!-- üîò Action Buttons -->
            <div class="mt-4 flex justify-between items-center">
              <a href="/guest/home-details/<%= home._id %>"
                class="bg-blue-500 text-white text-sm px-4 py-2 rounded-md hover:bg-blue-600 transition">
                 View
              </a>
              <form action="/guest/favourites-remove/<%= home._id %>" method="POST">
                <button type="submit"
                  class="bg-red-500 text-white text-sm px-4 py-2 rounded-md hover:bg-red-600 transition">
                   Remove
                </button>
              </form>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
    <% } %>
  </section>
</body>
</html>
