<%- include('../partials/head')%>
</head>

<body class="bg-gray-100 flex justify-center items-center min-h-screen">
  <%- include('../partials/nav')%>

  <form action="/host/<%= editing ? 'edit-home' : 'home-list'  %>" method="POST"
    class="max-w-md w-full bg-white p-6 rounded shadow">
    
    <h1 class="text-2xl font-bold text-center text-blue-600 mb-4">
      <%= editing ? 'Edit Home' : 'Add New Home' %>
    </h1>

    <input type="hidden" name="id" value="<%= editing ? home._id : '' %>">

    <label class="block mb-2">
      <span class="text-gray-700">Home Title</span>
      <input type="text" name="name" value="<%= editing ? home.name : '' %>" required
        class="mt-1 block w-full border-gray-300 rounded shadow-sm focus:ring focus:ring-blue-200" />
    </label>

    <label class="block mb-2">
      <span class="text-gray-700">Price</span>
      <input type="text" name="price" value="<%= editing ? home.price : '' %>" required
        class="mt-1 block w-full border-gray-300 rounded shadow-sm focus:ring focus:ring-blue-200" />
    </label>

    <label class="block mb-2">
      <span class="text-gray-700">Location</span>
      <input type="text" name="location" value="<%= editing ? home.location : '' %>" required
        class="mt-1 block w-full border-gray-300 rounded shadow-sm focus:ring focus:ring-blue-200" />
    </label>

    <label class="block mb-2">
      <span class="text-gray-700">Rating</span>
      <input type="text" name="rating" value="<%= editing ? home.rating : '' %>" required
        class="mt-1 block w-full border-gray-300 rounded shadow-sm focus:ring focus:ring-blue-200" />
    </label>

    <label class="block mb-2">
      <span class="text-gray-700">Home Image URL</span>
      <input type="text" name="imageUrl" value="<%= editing ? home.imageUrl : '' %>" required
        class="mt-1 block w-full border-gray-300 rounded shadow-sm focus:ring focus:ring-blue-200" />
    </label>

    <button type="submit"
      class="mt-4 px-4 py-2 w-full bg-blue-600 text-white rounded hover:bg-blue-700">
      <%= editing ? 'Update Home' : 'Add Home' %>
    </button>
  </form>
</body>
</html>
