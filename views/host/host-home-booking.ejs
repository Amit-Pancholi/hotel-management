<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-br from-indigo-100 via-white to-green-100 text-gray-800 min-h-screen">
  <!-- Navbar -->
  <%- include('../partials/nav') %>

  <section class="max-w-6xl mx-auto px-4 py-12">
    <h2 class="text-3xl sm:text-4xl font-extrabold text-center text-indigo-700 mb-10 tracking-tight drop-shadow-md">
      üìÑ All Bookings
    </h2>

    <% if (bookings.length === 0) { %>
    <p class="text-center text-gray-500 text-lg">No bookings found.</p>
    <% } else { %>
    <div class="space-y-10">
      <% bookings.forEach((booking) => { const home = booking.homeName; %>
      <div
        class="rounded-2xl shadow-xl overflow-hidden transform transition duration-300 hover:scale-[1.01] bg-white/60 backdrop-blur-lg border border-white/30">

        <!-- Minimal image-style banner -->
        <div class="bg-gradient-to-r from-green-100 via-emerald-100 to-violet-100 text-white p-6 sm:p-8">

          <!-- Card Wrapper -->
          <div
            class="rounded-2xl shadow-xl overflow-hidden transition transform hover:scale-[1.01] bg-white/60 backdrop-blur-lg border border-white/30">

            <!-- Banner -->
            <div class="bg-gradient-to-r from-green-200 via-emerald-100 to-violet-200 py-4 px-6">
              <h3 class="text-xl sm:text-2xl font-bold text-indigo-800">
                üè† <%= home?.name || "Unknown Home" %>
              </h3>
            </div>

            <!-- Card Content -->
            <div class="p-6 sm:p-8">
              <!-- Info Grid -->
              <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6 text-sm text-gray-800">

                <!-- Guest Info -->
                <div class="space-y-1">
                  <p><span class="font-medium">Guest:</span> <%= booking.guestName %></p>
                  <p><span class="font-medium">Email:</span> <%= booking.guestEmail %></p>
                  <p><span class="font-medium">Phone:</span> <%= booking.guestPhone %></p>
                </div>

                <!-- Home Info -->
                <div class="space-y-1">
                  <p><span class="font-medium">Location:</span> <%= home?.location || "N/A" %></p>
                  <p><span class="font-medium">Rating:</span> <%= home?.rating || "N/A" %></p>
                  <p><span class="font-medium">Total:</span> ‚Çπ<%= booking.total %></p>
                </div>

                <!-- Dates -->
                <div class="space-y-1">
                  <p><span class="font-medium">Check-In:</span> <%= new Date(booking.checkIn).toDateString() %></p>
                  <p><span class="font-medium">Check-Out:</span> <%= new Date(booking.checkOut).toDateString() %></p>
                </div>
              </div>

              <!-- Booking Status -->
              <% if (booking.isCompleted) { %>
              <div class="mt-6 text-sm text-green-700 font-medium">
                <span class="font-semibold text-gray-800">Status:</span>
                <span class="bg-green-100 text-green-700 px-2 py-1 rounded-full text-xs font-semibold ml-2">‚úîÔ∏è Booking
                  Completed</span>
              </div>
              <% } %>
            </div>
          </div>

        </div>
      </div>
      <% }) %>
    </div>
    <% } %>
  </section>
</body>

</html>