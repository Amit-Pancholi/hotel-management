<%- include('../partials/head')%>
</head>

<body class="bg-gray-50 text-gray-800">
  <!-- 🌐 Navbar -->
  <%- include('../partials/nav')%>

  <!-- 💬 Welcome Section -->
  <header class="text-center py-16 bg-gradient-to-r from-blue-100 via-blue-50 to-blue-100">
    <h1 class="text-4xl font-extrabold text-blue-700 mb-4">
      Welcome to Home
    </h1>
    <p class="text-lg text-gray-600">
      Easily list and manage your properties with just a few clicks.
    </p>
    <a href="/host/home-add"
      class="mt-6 inline-block bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-full text-lg transition">
      Add Your Home
    </a>
  </header>

  <!-- 📦 Future Section: Featured Homes / Listings -->
  <section class="max-w-6xl mx-auto px-4 py-12">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Homes lists</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Example card -->
      <% homeData.forEach((data)=>{ %>
      <div class="bg-white rounded-xl shadow p-5">
        <h3 class="text-xl font-semibold text-gray-800">Modern Apartment</h3>
        <img src="<%= data.imageUrl %> " alt="" srcset="" class="w-full h-1/2">
        <div>
          <p class="text-gray-500">
            <%= data.name %>
          </p>
          <p class="text-gray-500">
            <%= data.location  %>
          </p>
          <div class="flex justify-between items-center w-full  gap-4 text-gray-500 mt-2">
           <h4>
              <b class="text-red-500"> Rs:</b> <span class="text-gray-500"><%= data.price %>/day</span>
            </h4>
            <p>
              <span class="text-green-600 mt-0">Rating:</span><span class="text-gray-500 mt-0"><%= data.rating %></span>
            </p>
          </div>
          <div class="mt-5  flex items-center justify-center  w-full">
            <a href="/host/edit-home/<%= data._id %>/?editing=true " class="text-blue-400 mr-6 px-3 py-2 rounded hover:underline bg-blue-100">Edit</a>
            <form action="/host/remove-home/<%= data._id %>" method="post">
              <button type="submit" class="text-red-400  ml-6 px-3 py-2 rounded hover:underline bg-blue-100">Delete</button>
            </form>
          </div>
          
        </div>
      </div>
      <% }) %>
      <!-- Add more cards dynamically later -->
    </div>
  </section>

  <!-- 🦶 Footer -->
  <footer class="bg-white text-center py-6 border-t text-sm text-gray-500">
    &copy; 2025 MyHome. All rights reserved.
  </footer>
</body>

</html>