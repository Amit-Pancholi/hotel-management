<div class="w-64 bg-white h-screen shadow-md p-4 flex flex-col justify-between fixed left-0 top-0">
    <div class="space-y-4">
      <div class="flex flex-col items-center">
        <img src="<%= user.profileImage || '/default-avatar.png' %>" class="w-20 h-20 rounded-full border-2 border-indigo-400" />
        <h3 class="mt-2 text-lg font-bold"><%= user.firstName %></h3>
        <span class="text-sm text-gray-500 capitalize"><%= user.userType %></span>
      </div>
  
      <div class="text-sm text-gray-700">
        <p><strong>Email:</strong> <%= user.email %></p>
        <% if (user.phone) { %><p><strong>Phone:</strong> <%= user.phone %></p><% } %>
      </div>
  
      <a href="/profile/edit"
         class="block text-center mt-4 text-white bg-indigo-500 hover:bg-indigo-600 py-1.5 rounded-md">
        ✏️ Edit Profile
      </a>
    </div>
  
    <div class="text-center">
      <a href="/logout" class="text-red-500 hover:underline text-sm">🚪 Logout</a>
    </div>
  </div>
  