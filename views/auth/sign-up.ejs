<%- include('../partials/head') %>
</head>

<body class="bg-gradient-to-r from-blue-100 to-purple-100  ">
  <%- include('../partials/nav') %>
<div class="flex items-center justify-center mt-10 min-h-[85vh]">
  <div class="w-full max-w-md bg-white shadow-xl rounded-2xl px-8 py-10 sm:px-10 sm:py-12">
    <h2 class="text-3xl font-extrabold text-center text-gray-800 mb-6">Create an Account</h2>

    <form action="/signup" method="POST" class="space-y-6">
      <% if (typeof errorMsg !== 'undefined' && Array.isArray(errorMsg) && errorMsg.length > 0) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative space-y-1" role="alert">
          <strong class="font-bold">Error!</strong>
          <ul class="list-disc list-inside text-sm mt-2 space-y-1">
            <% errorMsg.forEach(function(msg) { %>
              <li><%= msg %></li>
            <% }); %>
          </ul>
        </div>
      <% } %>
      
      <!-- First Name -->
      <div>
        <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
        <input type="text" name="firstName" id="firstName" value="<%= oldInput.firstName ? oldInput.firstName : '' %>" required placeholder="Ram"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
      </div>

      <!-- Last Name -->
      <div>
        <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
        <input type="text" name="lastName" id="lastName" value="<%= oldInput.lastName ? oldInput.lastName : '' %>" placeholder="sharma"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
      </div>

      <!-- Email -->
      <div>
        <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
        <input type="email" name="email" id="email" value="<%= oldInput.email ? oldInput.email : '' %>" required placeholder="example@mail.com"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
      </div>

      <!-- Password -->
      <div>
        <label for="password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
        <input type="password" name="password" id="password" value="<%= oldInput.password ? oldInput.password : '' %>" required placeholder="••••••••"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
      </div>

      <!-- Confirm Password -->
      <div>
        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirm Password</label>
        <input type="password" name="confirmPassword" id="confirmPassword" required placeholder="••••••••"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" />
      </div>

      <!-- User Type -->
      <div class="flex space-x-6 items-center text-sm text-gray-700">
        <label class="flex items-center space-x-2">
          <input type="radio" name="userType" value="guest" <%= oldInput.userType === 'guest' ? 'checked' : '' %>  checked " class="text-indigo-600 focus:ring-indigo-500" />
          <span>Guest</span>
        </label>
        <label class="flex items-center space-x-2">
          <input type="radio" name="userType" value="host" <%= oldInput.userType === 'host' ? 'checked' : '' %>  class="text-indigo-600 focus:ring-indigo-500" />
          <span>Host</span>
        </label>
      </div>

      <!-- Terms and Conditions -->
      <div class="text-sm text-gray-600 flex items-start space-x-2">
        <input type="checkbox" name="terms" required class="mt-1 rounded text-indigo-600 focus:ring-indigo-500" />
        <label>
          I agree to the
          <a href="/terms" class="text-indigo-600 underline hover:text-indigo-800">terms and conditions</a>
        </label>
      </div>

      <!-- Submit Button -->
      <div>
        <button type="submit"
          class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white py-2.5 rounded-lg font-semibold hover:from-blue-700 hover:to-purple-700 transition duration-200 shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
          Sign Up
        </button>
      </div>
    </form>

    <!-- Login Link -->
    <div class="text-center mt-6">
      <p class="text-sm text-gray-600">
        Already have an account?
        <a href="/login" class="font-medium text-indigo-600 hover:text-indigo-500">
          Log in
        </a>
      </p>
    </div>
  </div>
</div>
 
</body>

</html>
