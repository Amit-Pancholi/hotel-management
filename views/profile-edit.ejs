<%- include('./partials/head') %>
</head>
<body class="bg-gradient-to-br from-purple-100 to-blue-100 min-h-screen text-gray-800">
  <%- include('./partials/nav') %>

  <section class="max-w-2xl mx-auto mt-20 bg-white shadow-2xl rounded-2xl border border-gray-200">
    <!-- Header -->
    <div class="bg-gradient-to-r from-indigo-600 to-purple-600 rounded-t-2xl p-6 text-white text-center">
      <h2 class="text-2xl font-bold">Update Your Profile</h2>
      <p class="text-sm text-indigo-100">Keep your profile up to date</p>
    </div>

    <!-- Form -->
    <form action="/profile/edit" method="POST" enctype="multipart/form-data" class="p-8 space-y-6">
        <%- include('./partials/error') %>
      <!-- Name Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
          <input type="text" id="firstName" name="firstName" value="<%= user.firstName %>" required
            class="w-full px-4 py-2 rounded-md border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 outline-none">
        </div>
        <div>
          <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
          <input type="text" id="lastName" name="lastName" value="<%= user.lastName %>"
            class="w-full px-4 py-2 rounded-md border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 outline-none">
        </div>
      </div>

      <!-- Phone -->
      <div>
        <label for="phoneNumber" class="block text-sm font-medium text-gray-700 mb-1">Phone Number</label>
        <input type="text" id="phoneNumber" name="phoneNumber" value="<%= user.phoneNumber || '' %>"
          class="w-full px-4 py-2 rounded-md border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 outline-none">
      </div>

      <!-- Bio -->
      <div>
        <label for="bioData" class="block text-sm font-medium text-gray-700 mb-1">Bio</label>
        <textarea id="bioData" name="bioData" rows="3"
          class="w-full px-4 py-2 rounded-md border border-gray-300 focus:ring-indigo-500 focus:border-indigo-500 outline-none"><%= user.bioData || '' %></textarea>
      </div>

      <!-- Profile Image Upload -->
      <div>
        <label for="profileImage" class="block text-sm font-medium text-gray-700 mb-1">Profile Image</label>
        <input type="file" id="profileImage" name="profileImage"
          class="block w-full text-sm text-gray-600 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:bg-indigo-600 file:text-white hover:file:bg-indigo-700 transition cursor-pointer">
      </div>

      <!-- Save Button -->
      <div class="text-center">
        <button type="submit"
          class="inline-block bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-8 py-2 rounded-md transition">
          Save Changes
        </button>
      </div>
    </form>
  </section>
</body>
</html>
